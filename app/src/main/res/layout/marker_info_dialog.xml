<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Закрыть"
        android:id="@+id/dialog_add_close_button"
        android:layout_gravity="end|top"
        android:foreground="?android:attr/selectableItemBackground"
        style="?borderlessButtonStyle"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:id="@+id/dialog_marker_image"
        android:scaleType="fitXY"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_pin_drop_black_24dp"
            android:layout_marginEnd="4dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="fill_horizontal|center_vertical|center_horizontal"
            android:id="@+id/dialog_marker_dialog"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="7dp"
        android:id="@+id/dialog_marker_radius_textview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:gravity="center_horizontal"
        android:id="@+id/dialog_marker_description"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_drawable"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:id="@+id/dialog_marker_info_button"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Откликнуться"/>

</LinearLayout>